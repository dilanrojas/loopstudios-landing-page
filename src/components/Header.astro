<header class="pm-header">
  <div class="pm-header-wrapper wrapper">

    <nav class="pm-nav">
      <img class="logo" src="/logo.svg" alt="loopstudios logo">
      <ul class="pm-nav-list">
        <li><a href="#">About</a></li>
        <li><a href="#">Careers</a></li>
        <li><a href="#">Events</a></li>
        <li><a href="#">Products</a></li>
        <li><a href="#">Support</a></li>
      </ul>
      <button class="mobile-nav-btn">
        <span><img class="icon-open" src="/icon-hamburger.svg" alt="Open mobile menu"></span>
        <span><img class="icon-close" src="/icon-close.svg" alt="Close mobile menu"></span>
      </button>
    </nav>

    <article class="hero-article">
      <h1>Immersive Experiences That Deliver</h1>
    </article>

  </div> 
</header>

<style>
  .pm-header {
    width: 100%;
    height: 700px;
    color: var(--white);
    position: relative;

    background: linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .5)), url('/desktop/image-hero.jpg');
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }

  @media (width <= 768px) {
    .pm-header { background-image: url('/mobile/image-hero.jpg') }
  }

  .logo { z-index: 100 }

  .pm-header-wrapper {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .pm-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-block: 5rem
  }

  .pm-nav-list {
    display: flex;
    gap: 2.5rem;
  }

  .pm-nav-list a {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;

    &::before {
      content: '';
      display: block;
      position: absolute;
      top: 120%;
      width: 0%;
      height: 2px;
      background-color: var(--white);
      transition: width .12s ease
    }
  }

  .pm-nav-list a:hover::before { width: 50% }

  .hero-article {
    margin-top: 4rem;
    padding: 2.8rem;
    border: 3px solid var(--white);
    font-size: 3.5rem;
    max-width: 20.6ch;
  }

  .mobile-nav-btn {
    display: none;
    height: 30px;
    z-index: 90;
  }

  .mobile-nav-btn.show {
    & .icon-close { display: block }
    & .icon-open { display: none }
  }

  .icon-close { display: none }

  @media (width <= 768px) {
    .pm-nav {
      padding-top: 3rem
    }

    .mobile-nav-btn { display: block }

    .pm-header { height: 700px }

    .pm-nav-list {
      display: none;
      flex-direction: column;
      align-items: start;
      justify-content: center;
      padding-left: 2rem;
      gap: 1.2rem;
      position: fixed;
      top: 0;
      left: 0;
      height: 100dvh;
      width: 100%;
      background-color: var(--black);

      opacity: 0;
      transition: opacity .12s ease, display .12s allow-discrete
    }

    .pm-nav-list.show {
      display: flex;

      opacity: 1;
      transition: opacity .12s ease;
      @starting-style { opacity: 0 }
    }

    .pm-nav-list a {
      text-transform: uppercase;
      font-family: var(--ff-heading);
      font-size: 1.6rem;
      font-weight: 300;
      opacity: .9;
      transition: opacity .12s ease;

      &::before { display: none }

      &:hover { opacity: .5 }
    }

    .hero-article {
      font-size: 2.5rem;
      min-width: 100%;
    }
  }

  @media (width <= 528px) {
    .hero-article {
      font-size: 1.6rem;
      padding: 1.4rem;
    }
  }
</style>

<script>
  const nav = document.querySelector('.pm-nav-list') as HTMLElement
  const mobileBtn = document.querySelector('.mobile-nav-btn') as HTMLButtonElement

  mobileBtn.addEventListener('click', () => {
    nav.classList.toggle('show')
    nav.classList.toggle('no-scroll')
    mobileBtn.classList.toggle('show')
  })
</script>
