<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Alata&family=Josefin+Sans:ital,wght@0,100..700;1,100..700&display=swap');
  
    :root {
    --white: hsl(0, 0%, 100%);
    --black: hsl(0, 0%, 0%);
    --d-gray: hsl(0, 0%, 55%);
    --vd-d-gray: hsl(0, 0%, 41%);
  
    --ff-html: "Alata", serif;
    --ff-heading: "Josefin Sans", serif;
  }
  
  html {
    font-family: var(--ff-html);
    font-size: 15px;
    line-height: 1.6;
    overflow-x: hidden;
    scrollbar-gutter: stable
  }

  html:has(.no-scroll) { overflow-y: hidden }

  body { overflow-x: hidden }
  
  * {
    margin: 0;
    padding: 0
  }
  
  *,
  *::before,
  *::after {
    box-sizing: border-box
  }
  
  h1, h2, h3, h4, h5, h6 {
    line-height: 1.1;
    font-family: var(--ff-heading);
    text-transform: uppercase;
    font-weight: 300;
  }
  
  a {
    color: currentColor;
    text-decoration: none;
  }
  
  ul, ol {
    list-style: none
  }
  
  button {
    cursor: pointer;
    background: none;
    border: 0;
    font-weight: inherit;
    font-size: inherit;
    font-family: inherit;
  }

  img, svg, picture { display: block }

  p { color: var(--d-gray) }
  
  /*Utility classes*/
  .wrapper {
    --width: 1200px;
    --padding: 2rem;

    width: min(var(--width), 100% - var(--padding) * 2);
    margin-inline: auto;
  }
  
  .flow > * + * {
    margin-top: var(--flow-space, 1rem)
  }
</style>
